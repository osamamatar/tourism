<%- include ('./partials/header')%>
<div style="height: 100px"></div>
    <div class="container" >
        <%place.map(p=>{%>
            <div class="card"  >
                <img src="../<%=p.image%>" alt="Mountains" style="width:100%" height="300px">
                <h3><%=p.name%></h3>
                <p><%=p.descreption%></p>
                <small> builded by <%=p.builder%></small>
                <h6> <%=p.location%></h6>
               
                <div>
                   
                   <%if(isAdmin){%>
                    <hr/>
                    <form  action="/place/<%=p._id %>?_method=DELETE" method="POST" >
                        <button class="btn" style="background: red;">Remove</button>
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </form>
                    
                    <button class="btn"><a href="/place/<%=p._id%>"> Edit</a></button>
                    <%}%>
                </div>
               
            </div>
            <%})%>
    </div> 
